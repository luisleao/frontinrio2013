{
  "manifest_version": 2,
  "name": "FrontinRio 2013",
  "description": "apresentação no FrontinRio",
  "version": "1.0",
  "minimum_chrome_version": "23",
  "app": {
    "background": {
      "scripts": ["js/main.js"]
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "serial",
    "audioCapture",
    "videoCapture",
    "<all_urls>",
    /*"https://www.meethue.com/api/nupnp",*/

    { "socket": [
      "udp-bind",
      "udp-send-to"
      ]

    }
  ]
}
